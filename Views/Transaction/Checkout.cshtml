@{
}

@model Transaction
<h1>Checkout</h1>
<form method="post" asp-action="Checkout">
    <h4>Ship To:</h4>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FirstName">First Name: </label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div>
        <label asp-for="LastName">Last Name: </label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div>
        <label asp-for="AddressLine1">Address: </label>
        <input asp-for="AddressLine1" class="form-control" />
    </div>
    <div>
        <label asp-for="AddressLine2">Address 2: </label>
        <input asp-for="AddressLine2" class="form-control" />
    </div>
    <div>
        <label asp-for="City">City: </label>
        <input asp-for="City" class="form-control" />
    </div>
    <div>
        <label asp-for="State">State: </label>
        <input asp-for="State" class="form-control" />
    </div>
    <div>
        <label asp-for="Zip">Zip: </label>
        <input asp-for="Zip" class="form-control" />
    </div><div>
        <label asp-for="Phone">Phone: </label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <br />
    <div class="float-end">
        <input class="btn btn-primary" type="submit" value="Checkout Basket" />
    </div>

</form>