<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th colspan="5" class="text-center">@TableTitle</th>
        </tr>
    </thead>
    <tbody>
        @if (Transactions?.Count() > 0)
        {
                @foreach (Transaction t in Transactions)
                {
        <tr>
            <td>@t.FirstName</td>
            <td>@t.LastName</td>
            <th>Book</th>
            <th>Quantity</th>
            <td>
                <button class="btn btn-sm btn-danger" @onclick="@(x => TransactionSelected.InvokeAsync(t.CheckoutID))">
                    @ButtonLabel
                </button>
            </td>
        </tr>
                    @foreach (BasketLineItem bli in t.Lines)
                    {
                        <tr>
                            <td colspan="2"></td>
                            <td>@bli.Book.Title</td>
                            <td>@bli.Quantity</td>
                            
                        </tr>
                    }
                }
        }
        else
        {
                <tr>
                    <td colspan="4" class="text-center">No Orders</td>
                </tr>
        }
    </tbody>
</table>

@code {
    [Parameter]
    public string TableTitle { get; set; } = "Transactions";
    [Parameter]
    public IEnumerable<Transaction> Transactions { get; set; }
    [Parameter]
    public string ButtonLabel { get; set; } = "Collected";
    [Parameter]
    public EventCallback<int> TransactionSelected { get; set; }

}
